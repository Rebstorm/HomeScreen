<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="40dp"
    android:background="@color/gray">

    <TextView
        android:id="@+id/connect_overlay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:textColor="@color/white"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/connect_overlay_no_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="No"
        android:layout_toEndOf="@+id/connect_overlay_text"
        android:layout_below="@+id/connect_overlay_text"
        android:background="@android:color/darker_gray"
        />
    
    <Button
        android:id="@+id/connect_overlay_yes_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Yes"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/connect_overlay_no_button"
        android:layout_below="@+id/connect_overlay_text"
        android:background="@android:color/darker_gray"
        />
</RelativeLayout>